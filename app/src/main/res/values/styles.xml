<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomerTextViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomerTextViewStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_ffffff</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>


    <style name="login_tx_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/dp_15</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="index_rb_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:button">@null</item>
<!--        <item name="android:drawablePadding">@dimen/dp_30_1</item>-->
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:background">@drawable/index_rb</item>
    </style>

    <style name="index_rg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="index_rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_120</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">@dimen/dp_0</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="toolbar_ll_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:text">@string/instore_location_toolbar</item>
    </style>

    <style name="toolbar_ll_ib_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@mipmap/toolbarreturn</item>
    </style>

    <style name="instore_public_rb_style">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/radiobutton_textcolor</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/instore_rg_rb</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="instore_public_tv_style">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="instore_order_public_tv_style">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="instore_order_public_et_style">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="item_instore_order_public_tv_style">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="instore_order_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="item_instore_fragement_location_tv">
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="item_instore_fragment_location_et_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/instore_public_et</item>
        <item name="android:drawableRight">@mipmap/scan</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="item_instore_fragment_location_rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_35</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
    </style>

    <style name="confirm_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/shape_confirm</item>
        <item name="android:textColor">@color/text_ffffff</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="item_instore_location_rl_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/dp_2</item>
    </style>

    <style name="instore_index_rb_style">
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/instore_index_rb</item>
        <item name="android:textColor">@color/text_ffffff</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="check_day_rb_style">
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/check_day_rb</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:textColor">@color/text_ffffff</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="login_bt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:background">@drawable/shape_login</item>
        <item name="android:textColor">@color/text_ffffff</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="setting_rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:background">@drawable/setting_rl</item>
    </style>

    <style name="setting_iv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="setting_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="setting_bt_style">
        <item name="android:gravity">right|center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/setting_bt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="setting_fl_style">
        <item name="android:layout_width">@dimen/dp_200</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/setting_fl</item>
    </style>

    <style name="setting_fl_tv_style">
        <item name="android:textColor">@color/color_ccccc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/setting_fl_tv</item>
        <item name="android:layout_height">@dimen/dp_30</item>
    </style>

    <style name="public_index_rg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dp_5</item>
    </style>

    <style name="check_day_rg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="check_day_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="check_day_date_picker_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_toRightOf">@+id/check_day_date_tv</item>
        <item name="android:background">@drawable/check_date_picker_tv</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/color_ccccc</item>
    </style>

    <style name="check_day_rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@+id/check_date_rl</item>
        <item name="android:layout_above">@+id/check_day_rg</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
    </style>

    <style name="item_activity_instore_index_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="item_activity_instore_index_rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
